<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DemoForPractice.MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/tvRollNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter roll no" />

        <EditText
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name" />

        <Button
            android:id="@+id/btnInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Insert" />
        <Button
            android:id="@+id/btnRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Read" />

        <EditText
            android:id="@+id/tvUpdateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name to update" />

        <EditText
            android:id="@+id/tvRollNo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter roll no for update" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update" />

        <EditText
            android:id="@+id/tvRollNo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter roll to delete" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete" />

        <Button
            android:id="@+id/btnDialogShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dialog Show" />
        <Button
            android:id="@+id/btnDialogDismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dialog Dismiss" />

    </LinearLayout>
</layout>